[user]
  name = Mateus Linhares
  email = mateuslinhares@gmail.com
[alias]
  co=checkout
  br=branch
  ci=commit
  st=status
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  who = shortlog -s --
  fl = log -p
  lgs = log --oneline --decorate
  sb = status -sb
  dw = diff --word-diff
[core]
  editor = vim
  excludesfile = ~/.gitignore
  pager = less -r
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
[push]
  default = matching
[branch]
  autosetuprebase = always
[help]
  autocorrect = 1
